@model WebAppQuanLyBongDa.Models.KHACHHANG
@{
    ViewBag.Title = "SuaKhachHang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="padding-top: 30px; margin-left: 25px; font-weight: bold">SỬA THÔNG TIN KHÁCH HÀNG</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MAKH)

    <div style="padding-top: 30px; margin-left: 25px; font-weight: bold" class="form-group">
        @Html.LabelFor(model => model.TENKH, "Tên khách hàng", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TENKH, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TENKH, "", new { @class = "text-danger" })
        </div>
    </div>

    <div style="padding-top: 30px; margin-left: 25px; font-weight: bold" class="form-group">
        @Html.LabelFor(model => model.SDTKH, "Số điện thoại khách hàng", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SDTKH, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SDTKH, "", new { @class = "text-danger" })
        </div>
    </div>

    <div style="padding-top: 30px; margin-left: 25px; font-weight: bold" class="form-group">
        @Html.LabelFor(model => model.DIACHIKH, "Địa chỉ khách hàng", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DIACHIKH, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DIACHIKH, "", new { @class = "text-danger" })
        </div>
    </div>

    <div style="padding-top: 30px; margin-left: 25px; font-weight: bold" class="form-group">
        <div style="padding-top: 20px" class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" class="btn btn-success" />
            @Html.ActionLink("Quay về", "DanhSachKhachHang", "Admin", new { @class = "btn btn-danger" })
        </div>
    </div>
</div>
}

