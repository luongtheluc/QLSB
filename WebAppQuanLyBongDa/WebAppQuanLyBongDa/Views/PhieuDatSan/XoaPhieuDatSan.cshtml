@model WebAppQuanLyBongDa.Models.PHIEUDATSAN

@{
    ViewBag.Title = "XoaPhieuDatSan";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="padding-top: 30px; margin-left: 25px; font-weight: bold">XÓA PHIẾU ĐẶT SÂN</h2>

<h3 style="padding-top: 30px; margin-left: 25px; font-weight: bold">Bạn có chắc chắn muốn xóa phiếu đặt sân không ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Mã phiếu đặt sân:
        </dt>

        <dd style="padding-top: 30px; margin-left: 25px">
            @Html.DisplayFor(model => model.MAPDS)
        </dd>

        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Ngày đặt sân:
        </dt>

        <dd style="padding-top: 30px; margin-left: 25px">
            @Html.DisplayFor(model => model.NGAYDATSAN)
        </dd>

        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Giờ đặt sân:
        </dt>

        <dd style="padding-top: 30px; margin-left: 25px">
            @Html.DisplayFor(model => model.GIODATSAN)
        </dd>

        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Mã khách hàng:
        </dt>

        <dd style="padding-top: 30px; margin-left: 25px">
            @Html.DisplayFor(model => model.MAKH)
        </dd>

        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Mã nhân viên:
        </dt>

        <dd style="padding-top: 30px; margin-left: 25px">
            @Html.DisplayFor(model => model.MANV)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div style="padding-top: 30px; margin-left: 25px; font-weight: bold" class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-warning" />
            @Html.ActionLink("Quay về", "DanhSachPhieuDatSan", "PhieuDatSan", new { @class = "btn btn-info" })
        </div>
    }
</div>


