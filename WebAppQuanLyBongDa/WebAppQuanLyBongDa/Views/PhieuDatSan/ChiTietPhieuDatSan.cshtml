@model WebAppQuanLyBongDa.Models.CHITIET_PHIEUDATSAN

@{
    ViewBag.Title = "ChiTietPhieuDat";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h2 style="padding-top: 30px; margin-left: 25px; font-weight: bold">CHI TIẾT PHIẾU ĐẶT SÂN</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Mã phiếu đặt sân:
        </dt>
        <dd style="padding-top: 30px; margin-left: 25px">
            @Html.DisplayFor(model => model.MAPDS)
        </dd>
        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Mã sân:
        </dt>

        <dd style="padding-top: 30px; margin-left: 25px">
            @Html.DisplayFor(model => model.MASAN)
        </dd>

        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Số giờ thuê sân:
        </dt>

        <dd style="padding-top: 30px; margin-left: 25px">
            @Html.DisplayFor(model => model.MAKHUNGGIO)
        </dd>

        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Mã phiếu thanh toán:
        </dt>

        <dd style="padding-top: 30px; margin-left: 25px">
            @Html.DisplayFor(model => model.MAPTT)
        </dd>


    </dl>
</div>
<p style="padding-top: 30px; margin-left: 25px">
    @Html.ActionLink("Chỉnh sửa", "SuaPhieuDatSan", new { id = Model.MAPDS }, new { @class = "btn btn-info" })
    @Html.ActionLink("Quay về", "DanhSachPhieuDatSan", "Admin", new { @class = "btn btn-danger" })
</p>

